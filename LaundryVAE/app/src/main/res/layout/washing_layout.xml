<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="100dp"
    app:cardBackgroundColor="#EFEEEE"
    app:cardCornerRadius="10dp"
    android:elevation="0dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/washingmachine_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/washingmachine_image">

            <TextView
                android:id="@+id/washingmachine_image_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/washingmachine_image_price"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/washingmachine_image_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="â‚¬00"
                android:layout_margin="5dp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>